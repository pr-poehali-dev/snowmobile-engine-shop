{
  "tests": [
    {
      "name": "Login with valid credentials",
      "method": "POST",
      "path": "/",
      "body": {
        "action": "login",
        "email": "admin@motodvigni.ru",
        "password": "admin123"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "success": true,
        "sessionToken": "string",
        "user": {
          "email": "string"
        }
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Login with invalid credentials",
      "method": "POST",
      "path": "/",
      "body": {
        "action": "login",
        "email": "admin@motodvigni.ru",
        "password": "wrongpassword"
      },
      "expectedStatus": 401,
      "expectedBody": {
        "success": false
      },
      "bodyMatcher": "partial"
    }
  ]
}
